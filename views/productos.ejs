<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Fedorable - Productos</title>

  <!-- Bootstrap -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <style>
    body {
      padding-top: 4.5rem;
    }
    .card-img-top {
      object-fit: cover;
      height: 200px;
    }
    .navbar-brand {
      font-weight: bold;
      font-size: 1.5rem;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/">Fedorable</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/">Inicio</a></li>
          <li class="nav-item"><a class="nav-link active" href="/productos">Productos</a></li>
          <li class="nav-item"><a class="nav-link" href="/quienes-somos">QuiÃ©nes Somos</a></li>
          <li class="nav-item"><a class="nav-link" href="/contacto">Contacto</a></li>
          <li class="nav-item">
            <a class="nav-link position-relative" href="/checkout">
              ðŸ›’ Carrito
              <span id="carrito-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                0
              </span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="container mt-5">
    <h2 class="text-center mb-5">CatÃ¡logo de Sombreros</h2>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      <% productos.forEach(p => { %>
        <div class="col">
          <div class="card shadow-sm h-100">
            <img src="https://placehold.co/600x400?text=<%= encodeURIComponent(p.nombre) %>" class="card-img-top" alt="<%= p.nombre %>">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= p.nombre %></h5>
              <p class="card-text text-muted mb-4">Precio: $<%= p.precio.toFixed(2) %> <%= p.moneda %></p>
              <button class="btn btn-primary mt-auto w-100"
                data-id="<%= p.id %>"
                data-nombre="<%= p.nombre %>"
                data-precio="<%= p.precio %>"
                onclick="agregarDesdeDataset(this)">
                Agregar al carrito
              </button>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>

  <script>
    function agregarDesdeDataset(el) {
      const id = el.dataset.id;
      const nombre = el.dataset.nombre;
      const precio = parseFloat(el.dataset.precio);
      agregarAlCarrito(id, nombre, precio, el);
    }

    function agregarAlCarrito(id, nombre, precio, boton) {
      const carrito = JSON.parse(localStorage.getItem('carrito')) || [];
      carrito.push({ id, nombre, precio });
      localStorage.setItem('carrito', JSON.stringify(carrito));

      boton.disabled = true;
      boton.innerText = 'âœ… Agregado';
      boton.classList.remove('btn-primary');
      boton.classList.add('btn-success');

      actualizarContadorCarrito();
    }

    function actualizarContadorCarrito() {
      const carrito = JSON.parse(localStorage.getItem('carrito')) || [];
      const badge = document.getElementById('carrito-count');
      if (badge) badge.textContent = carrito.length;
    }

    actualizarContadorCarrito();
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
