          const { url } = await response.json();
          window.location = url;
      
        -->
      
        <!-- 
          Desaf√≠o 3 (opcional): Mostrar feedback si el carrito est√° vac√≠o y desactivar el bot√≥n de pago
        -->
      </div>
      
    </div>
  </main>

  <footer>
    <div class="container">
      <p class="mb-0">¬© 2025 Fedorable - Todos los derechos reservados</p>
    </div>
  </footer>

  <script>
    const carrito = JSON.parse(localStorage.getItem('carrito')) || [];
    const tbody = document.querySelector('#tabla-carrito tbody');
    const totalSpan = document.getElementById('total-carrito');

    let total = 0;
    carrito.forEach(p => {
      const row = document.createElement('tr');
      row.innerHTML = `
        <td>${p.nombre}</td>
        <td class="text-end">$${p.precio.toFixed(2)}</td>
      `;
      tbody.appendChild(row);
      total += p.precio;
    });

    totalSpan.textContent = `$${total.toFixed(2)}`;

    function actualizarContadorCarrito() {
      const badge = document.getElementById('carrito-count');
      if (badge) badge.textContent = carrito.length;
    }

    actualizarContadorCarrito();
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
